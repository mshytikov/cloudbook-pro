#!/bin/bash
#
# Google Cloud Platform
#

uid=$(id -u)
gid=$(id -g)
docker run --rm -i \
  -e HOME=$HOME \
  -w /hostfs/$(pwd) \
  -v /:/hostfs:rw \
  -v $MYBASH_SECRETS_DIR/gcp/.config:$HOME/.config \
  -v $MYBASH_SECRETS_DIR/gcp/.kube:$HOME/.kube \
  -v $MYBASH_SECRETS_DIR/gcp/.gsutil:$HOME/.gsutil \
  -v $MYBASH_SECRETS_DIR/gcp/.bigqueryrc:$HOME/.bigqueryrc \
  --user $uid:$gid \
  google/cloud-sdk "$@"
